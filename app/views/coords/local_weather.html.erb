<h1>Your local weather</h1>

<dl>
  <dt>Address:</dt>
  <dd><%= @address %></dd>

  <dt>Latitude:</dt>
  <dd><%= @latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @longitude %></dd>

  <dt>Current temperature:</dt>
  <dd><%= @temperature %></dd>

  <dt>Summary for the hour:</dt>
  <dd><%= @minutely_summary %></dd>

  <dt>Summary for the day:</dt>
  <dd><%= @hourly_summary %></dd>

  <dt>Summary for the week:</dt>
  <dd><%= @daily_summary %></dd>
</dl>


<h2>Find the weather at another location</h2>
<form >
  <div>
    <label for="address">Address:</label>
    <input id="address" type="text" name="address">
  </div>
    <input type="submit" value="Submit Address">
  </div>
</form>
